{{title model.description}}
{{remember-document-scroll key=(concat 'expense/' model.id)}}

<section id="transaction">
  {{#form-for model autosave=true onsubmit=(route-action 'save') onsaved=(route-action 'flash' 'Saved ' model.description) as |f|}}
    <nav class='row'>
      {{#if model.paymentProcesssorUrl}}
        <a href="{{model.paymentProcesssorUrl}}" target="__blank" rel="nofollow noreferrer" class="submit-button">
          {{icon "coin"}} View Charge
        </a>
      {{/if}}
      {{#confirm-button onsubmit=(route-action 'deleteRecord' model)}}
        {{icon 'trash'}}
      {{else}}
        Are you sure?
      {{/confirm-button}}
    </nav>
    <div class="grid-column">
      {{f.text 'description'}}
      <div class='grid-row'>
        {{f.currency 'amountPaid'}}
      </div>
      {{f.datetime 'paidAt'}}
      {{f.autocomplete 'paidBy' key='name' onquery=(route-action 'query' 'person')}}
      {{f.currency 'amountOwed'}}
      {{f.editor 'notes' rows=3 markup=(list 'bold' 'italic' 'underline' 'emoji')}}
    </div>
  {{/form-for}}
</section>
