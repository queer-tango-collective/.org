{{#if (equals model session.currentGroup)}}
  {{title "My Group"}}
{{else}}
  {{title model.name}}
{{/if}}
<section id="group" class="container">
  {{#form-for model autosave=true onsubmit=(route-action 'save') class='grid-column' as |f|}}
    {{#f.nav}}
      {{#dialog-button (component 'manage-builds-dialog' builds=model.builds) group='updates'}}
        {{icon 'love'}} See Updates
      {{/dialog-button}}
      {{#dialog-button (component 'update-stripe-dialog' model=model onsave=(route-action 'save')) group='update-stripe'}}
        {{icon 'stripe'}} Update Stripe
      {{/dialog-button}}
    {{/f.nav}}
    {{f.text 'name'}}
    {{f.text 'hostname' label="Hostname"}}
    {{f.text 'email' type='email'}}
    {{f.text 'timezone'}}

    <h3>Sections</h3>
    {{#f.form-for 'channels' as |g|}}
      {{g.text 'name'}}
      {{g.text 'slug'}}
    {{else}}
      <button type='submit' onclick={{route-action 'createChannel'}}>{{icon 'add'}} Add Section</button>
    {{/f.form-for}}
  {{/form-for}}
</section>
