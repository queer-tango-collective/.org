{{title "Photos"}}
{{remember-document-scroll key='photos'}}

{{to-elsewhere named='search' send=(component 'search-field' query=q onquery=(action (mut q)) placeholder="Search photos by filename or accessibility description")}}
<section id="photos">
  <header class='container'>
    <nav class='row'>
      {{#file-upload class='submit-button' onfileadd=(route-action 'upload')}}
        {{icon "photo"}} Upload Photo
      {{/file-upload}}
    </nav>
  </header>
  {{#photo-grid name='photo' photos=model.model total=model.meta.page.total icon='photo' sort=sort load=(route-action 'load') as |photo width height|}}
    {{#link-to 'photo' photo~}}
      <img src="{{photo.url}}" alt="{{photo.title}}" width="{{width}}" height="{{height}}">
    {{~/link-to}}
  {{/photo-grid}}
</section>
