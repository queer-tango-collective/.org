{{title model.name}}
{{remember-document-scroll key=(concat 'location/' model.id)}}

<section id="location" class="container">
  {{#form-for model name='location' autosave=true onsubmit=(route-action 'save') as |f|}}
    {{#f.nav ondelete=(route-action 'deleteRecord')}}
      {{#dialog-button (component 'map-dialog' latitude=model.latitude longitude=model.longitude) group='map'}}
        {{t 'location.actions.viewMap' icon=(icon 'location') htmlSafe=true}}
      {{/dialog-button}}
    {{/f.nav}}
    <div class='grid-column'>
      <div class='grid-row'>
        {{f.text 'name'}}
        {{f.text 'website'}}
      </div>
      {{f.textarea 'address' rows=2}}
      {{f.text 'postalCode' onblur=(route-action 'hydrateLocation' f)}}
      <div class='grid-row'>
        {{f.text 'city'}}
        {{f.text 'regionCode'}}
      </div>
      {{#f.upload 'photo' as |photo|}}
        <img src="{{photo.url}}">
      {{else}}
        Upload Photo
      {{/f.upload}}
    </div>
  {{/form-for}}
</section>

