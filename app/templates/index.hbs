<section id="home" class="container">
  <h2>ðŸ‘‹ Hello, {{session.currentPerson.name}}</h2>
  <p>{{#link-to 'learn'}}Learn more{{/link-to}} about how to use this site, or see below for a quick glance at what's up with {{session.currentGroup.name}}:</p>
  
  <div class="grid-column">
    <div class="grid-row">
      <div class="events">
        <h3>ðŸ’ƒ Upcoming Events</h3>
        {{#sortable-list rows=this.sortedEvents sort=sortEventsBy onsort=(action (mut sortEventsBy)) as |l|}}
          {{#l.item 'name' as |item|}}
            {{#link-to 'event' item}}{{item.title}}{{/link-to}}
          {{else}}
            Name
          {{/l.item}}
          {{#l.item 'ticketStubs.length' as |item|}}
            {{item.ticketStubs.length}}
          {{else}}
            Attendance
          {{/l.item}}
        {{/sortable-list}}
      </div>
      <div class="balance">
        <h3>ðŸ’° Balance</h3>
        {{#sortable-list rows=this.sortedTransactions sort=sortTransactionsBy onsort=(action (mut sortTransactionsBy)) as |l|}}
          {{#l.item 'name' as |item|}}
            {{#link-to 'person' item.paidBy}}{{item.paidBy.name}}{{/link-to}}
          {{else}}
            Name
          {{/l.item}}
          {{#l.item 'amountPaid' as |item|}}
            {{l 'currency' item.amountPaid currency=item.currency}}
          {{else}}
            Amount
          {{/l.item}}
        {{/sortable-list}}
        {{balance-bar balance=transactions.meta.balance credit=transactions.meta.credit debit=transactions.meta.debit}}
      </div>
    </div>
  </div>
</section>