{{#form-for data name='transaction' onsubmit=(action 'submit') as |f|}}
  <header>{{icon 'coin'}} Add Expense</header>
  <div class="body grid-column">
    <div class='grid-row'>
      {{f.text 'description'}}
      {{f.date 'paidAt'}}
    </div>
    {{f.currency 'amountOwed' 'currency' currencies=(list 'USD' 'EUR')}}
    {{f.autocomplete 'paidBy' key='name' onquery=(action onquery 'person')}}
    {{f.editor 'notes' markup=(list 'bold' 'italic' 'underline')}}
  </div>
  <footer>
    {{f.submit 'Add Expense'}}
    <button type='reset' onclick={{dismiss}}>Cancel</button>
  </footer>
{{/form-for}}
