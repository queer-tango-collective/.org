<header>{{icon 'location'}} Add Location</header>
<div class="body grid-column">
  {{search-field query=q onquery=(action 'query') placeholder="Search locations by name, address"}}
  {{#sortable-list name='findLocation' rows=results sort=sort onsort=(action 'sort') query=q icon='location' as |l|}}
    {{#l.item 'checkbox' sortable=false as |item|}}
      {{check-box value=(equals selected item) onchange=(action (mut selected) item)}}
    {{else}}
      <span></span>
    {{/l.item}}
    {{#l.item 'name' as |item|}}
      {{item.name}}
    {{/l.item}}
    {{#l.item 'addressLine' as |item|}}
      {{item.addressLine}}
    {{/l.item}}
    {{#l.item 'city' as |item|}}
      {{item.city}}
    {{/l.item}}
    {{#l.item 'regionCode' as |item|}}
      {{item.regionCode}}
    {{/l.item}}
  {{/sortable-list}}
</div>
<footer>
  <button type='submit' onclick={{action onsubmit selected}}>Add Location</button>
  <button type='reset' onclick={{action dismiss}}>Cancel</button>
</footer>
