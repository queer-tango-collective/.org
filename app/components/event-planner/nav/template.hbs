<nav class="ember-power-calendar-nav">
  {{#if onCenterChange}}
    <button type="submit" class="ember-power-calendar-nav-control ember-power-calendar-nav-control--previous" onclick={{action calendar.actions.moveCenter -1 'month' calendar}}>{{icon 'chevron'}}</button>
  {{/if}}
  {{#if hasBlock}}
    {{yield calendar}}
  {{else}}
    {{moment-format calendar.center 'MMMM YYYY' locale=calendar.locale}}
  {{/if}}
  {{#if onCenterChange}}
    <button type="submit" class="ember-power-calendar-nav-control ember-power-calendar-nav-control--next" onclick={{action calendar.actions.moveCenter 1 'month' calendar}}>{{icon 'chevron'}}</button>
  {{/if}}
</nav>
